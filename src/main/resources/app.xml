<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    
    <bean id="persona" class="com.enero.springagosto.model.Persona">
        <property name="nombres" value="Williams EQ"/>
    </bean>
    
    <!-- Valores Constructor -->
    <bean id="bob" class="com.enero.springagosto.model.Musico">
        <constructor-arg value="5"/>
    </bean>
    
    <bean id="instrumento" class="com.enero.springagosto.model.Instrumento">
        <property name="marca" value="fender"/>
    </bean>   
    <bean id="slash" class="com.enero.springagosto.model.Musico">
        <constructor-arg value="5"/>
        <constructor-arg ref="instrumento"/>
    </bean>
    
    <!-- Valores a travÃ©s de Setters -->
    <bean id="lennon" class="com.enero.springagosto.model.Musico">
        <property name="nombres" value="John Lennon"/>
        <property name="numerocanciones" value="4" />
    </bean>
    
</beans>
